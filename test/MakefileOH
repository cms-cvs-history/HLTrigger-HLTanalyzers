ROOTLIBS   = $(shell root-config --libs)
ROOTCFLAGS = $(shell root-config --cflags)

CXX        = gcc
CXXFLAGS   = $(ROOTCFLAGS) -Wall -g
LD         = gcc
LDFLAGS    = -Wall -g
LIBS       = $(ROOTLIBS) -lEG


OhltRates: OhltRates.cpp OHltTree.h OHltTree.cpp
	$(CXX) $(CXXFLAGS) $(LIBS) OHltTree.cpp OhltRates.cpp -o OhltRates

all: OhltRates 
